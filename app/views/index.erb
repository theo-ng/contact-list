<section class="container">
<h1>Contact List</h1>
<hr/>
<span class="four columns" id="buttons">
  <div id="new">
    <button class="button-primary" id="btn-new" data-toggle="#newContact">New</button>
  </div>
  <div id="newContact">
    <div>
      <input id="firstName" placeholder="First Name">
    </div>
    <div>
      <input id="lastName" placeholder="Last Name">
    </div>
    <div>
      <input id="email" placeholder="Email">
    </div>
    <div>
      <input id="phone" placeholder="Phone Number">
    </div>
    <button class="button-primary" id="btn-new-contact">Submit</button>
  </div>
  <div id="list">
    <button class="button-primary" id="btn-list" data-toggle="#contactsTbl">List</button>
  </div>
  <div id="search">
    <button class="button-primary" id="btn-search" data-toggle="#searchBox">Search</button>
  </div>
  <div id="searchBox">
    <input id="term" placeholder="Search term">
  </div>
</span>
<span class="seven columns" id="contactList">
  <table id="contactsTbl">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th></th>
      </tr>
    </thead>
    <tbody id="contacts">
    </tbody>
  </table>
</span>
</section>